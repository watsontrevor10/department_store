<h1><%= @item.id ? 'Edit' : 'Create' %></h1>
<hr />
<%= form_for [@department, @item] do |f| %>
  <%= f.label :item_name %>
  <%= f.text_field :item_name, required: true, autofocus: true %>
  <br />
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br />
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>